<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="disono.webmons.com.clean_architecture">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.ui.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.ui.activities.MainActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".presentation.ui.activities.auth.LoginActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".presentation.ui.activities.auth.RegisterActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".presentation.ui.activities.auth.ForgotPasswordActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".presentation.ui.activities.user.UserListActivity"></activity>
    </application>

</manifest>