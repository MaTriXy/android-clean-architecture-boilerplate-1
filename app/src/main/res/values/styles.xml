<resources>
    <!-- Base application theme with ActionBar-->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionBarStyle">@style/ActionBarThemeNoShadow</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <!-- ActionBar with no shadow -->
    <style name="ActionBarThemeNoShadow" parent="Base.Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/wb_white</item>
        <item name="android:background">@color/wb_primary</item>
    </style>

    <!-- Slide -->
    <style name="Slide">
        <item name="android:windowEnterAnimation">@anim/slide_enter</item>
        <item name="android:windowExitAnimation">@anim/slide_enter</item>
    </style>

    <!-- Splash theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/screen</item>
    </style>

    <!-- Input Labels -->
    <style name="InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingBottom">@dimen/input_label_vertical_spacing</item>
        <item name="android:paddingLeft">@dimen/input_label_horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/input_label_horizontal_spacing</item>
    </style>
</resources>
